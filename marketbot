<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tik Market App</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        body { background: #18222d; color: white; font-family: sans-serif; padding: 15px; margin: 0; }
        .header { text-align: center; padding: 10px; border-bottom: 1px solid #313d4d; }
        .item-card { background: #212d3b; border-radius: 12px; padding: 15px; margin: 10px 0; display: flex; justify-content: space-between; align-items: center; }
        .price { color: #81c784; font-weight: bold; }
        .buy-btn { background: #2481cc; color: white; border: none; padding: 10px 15px; border-radius: 8px; cursor: pointer; }
        .footer-btn { position: fixed; bottom: 20px; width: calc(100% - 30px); background: #28a745; color: white; padding: 15px; border-radius: 10px; text-align: center; font-weight: bold; cursor: pointer; }
    </style>
</head>
<body>
    <div class="header"><h3>Tik Market</h3></div>
    <div id="items-container">
        </div>
    <div class="footer-btn" onclick="checkout()">Checkout (Send to Bot)</div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();

        // سيتم ربط هذه البيانات لاحقاً بقاعدة بياناتك
        const inventory = [
            {user: 'aaaa', price: '50$'},
            {user: 'bbbb', price: '10$'}
        ];

        const container = document.getElementById('items-container');
        inventory.forEach(item => {
            container.innerHTML += `
                <div class="item-card">
                    <div><b>${item.user}</b><br><span class="price">${item.price}</span></div>
                    <button class="buy-btn" onclick="addToCart('${item.user}')">Add</button>
                </div>`;
        });

        let cart = [];
        function addToCart(u) {
            cart.push(u);
            tg.MainButton.setText("Confirm Order: " + cart.length);
            tg.MainButton.show();
        }

        tg.onEvent('mainButtonClicked', function() {
            tg.sendData(JSON.stringify(cart)); // يرسل السلة كاملة للبوت
        });
    </script>
</body>
</html>
